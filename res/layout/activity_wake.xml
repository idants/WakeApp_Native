<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:background="@drawable/border"
    tools:context="com.example.wakeapp.WakeActivity" >

    <RelativeLayout
        android:id="@+id/rlSnooze"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/green" >

        <LinearLayout
            android:id="@+id/llSnoze"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/tSnooze"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cyan"
                android:onClick="snooze"
                android:text="@string/tSnooze" 
                android:textSize="52sp" />

        </LinearLayout>

    </RelativeLayout>
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="10dp"
    android:background="@color/black"/>
    
    <RelativeLayout
        android:id="@+id/rlWake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" 
        android:background="@color/blue" >
        <LinearLayout
            android:id="@+id/llWake"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/tWake"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/calmingOrange"
                android:onClick="wake"
                android:text="@string/tWake"
                android:textSize="52sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>